<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.louyulin.day05paint.Progress
        android:id="@+id/progress_bar"
        app:progressTextSize="20dp"
        app:progressTextColor="@color/colorAccent"
        app:innerBackground="#0C78D8"
        app:outerBackground="#A30532"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <com.example.louyulin.day05paint.HorizontalProgressBarWithNumber
        android:id="@+id/progress_horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <com.example.louyulin.day05paint.ShapeView
        android:id="@+id/shapeView"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />

</LinearLayout>